<!DOCTYPE html>
<html>
    <head>
    </head>
    <body class="bg-dark">
        <div class="d-flex justify-content-center pt-3 pb-3 rounded shadow-lg">
            <div class="d-flex justify-content-center col-6">
                <img class="mb-4 w-100" src="https://images.vexels.com/media/users/3/136865/isolated/preview/7221ccf73801a7e9729d11d505fcff2b-smartphone-on-hand.png" alt="">
            </div>
            <div class="d-flex justify-content-center mt-5 mr-5">
                @using (Html.BeginForm("VerificateEmail", "Verification", FormMethod.Post, new { @class = "w-100" }))
                {
                    <h1 class="h3 mb-3 text-white">Enter code, you received by e-mail</h1>
                    <input type="text" class="form-control mb-5" id="code" name="confirmation" placeholder="12345">

                    <input type="hidden" name="code" value=@ViewBag.Code />

                    <button class="w-50 btn btn-info border border-white" type="submit">Confirm</button>
                }
            </div>
        </div>
    </body>
</html>
