@model BicycleShopDB.Tables.Bicycle

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/MyCSS/Details.css" rel="stylesheet" />
</head>
<body>
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <h1 class="display-3 text-center">
            @Model.BicycleName
        </h1>
    </div>
    <div class="row">
        <div class="bd-example col-6 fixed-size">
            @if (Model.Images != null)
            {
                <div id="indicators-container" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li class="active" data-target="#indicators-container" data-slide-to="0"></li>
                        @for (int i = 1; i <= Model.Images.Count; i++)
                        {
                            <li data-target="#indicators-container" data-slide-to=@i></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block fixed-size" src=@Model.ImagePath alt="" data-holder-rendered="true">
                        </div>
                        @foreach (var image in Model.Images)
                        {
                            <div class="carousel-item">
                                <img class="d-block fixed-size" src=@image.ImagePath alt="" data-holder-rendered="true">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#indicators-container" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#indicators-container" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            }
            else
            {
                <img class="d-block w-100" src=@Model.ImagePath alt="">
            }
        </div>
        <div class="bd-example col ml-5">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Name</th>
                        <td>@Model.BicycleName</td>
                    </tr>
                    <tr>
                        <th scope="row">Brand</th>
                        <td>@Model.Brand</td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>@Model.Type</td>
                    </tr>
                    <tr>
                        <th scope="row">Release year</th>
                        <td>@Model.ReleaseYear</td>
                    </tr>
                    <tr>
                        <th scope="row">Frame material</th>
                        <td>@Model.FrameMaterial</td>
                    </tr>
                    <tr>
                        <th scope="row">Release year</th>
                        <td>@Model.ReleaseYear</td>
                    </tr>
                    <tr>
                        <th scope="row">Wheel size</th>
                        <td>@Model.WheelSize</td>
                    </tr>
                    @if (Model.BrakeType != null)
                    {
                        <tr>
                            <th scope="row">Brake type</th>
                            <td>@Model.BrakeType</td>
                        </tr>
                    }
                    <tr>
                        <th scope="row">Speed quantity</th>
                        <td>@Model.SpeedQuantity</td>
                    </tr>
                    @if (Model.MaxWeight != null)
                    {
                        <tr>
                            <th scope="row">Maximum weight</th>
                            <td>@Model.MaxWeight</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>